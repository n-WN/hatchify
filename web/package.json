{
	"name": "hatchify",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && pnpm build:packages && vite build",
		"preview": "vite preview",
		"preview:icons": "pnpm --filter @hatchify/icons run preview",
		"build:icons": "pnpm --filter @hatchify/icons run build",
		"build:packages": "pnpm -r build",
		"build:i18n-resource": "npx tsx scripts/build-locales-resource.ts",
		"fix:format": "biome check --write ./src ./packages/build-rt/src",
		"postinstall": "simple-git-hooks",
		"preinstall": "npx only-allow pnpm",
		"check": "tsc --incremental --noEmit"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged && pnpm check"
	},
	"lint-staged": {
		"*.{js,json}": [
			"biome check --write"
		],
		"*.ts?(x)": [
			"biome check --write"
		]
	},
	"dependencies": {
		"@ebay/nice-modal-react": "^1.2.13",
		"@tanstack/react-query": "^5.90.12",
		"@xyflow/react": "^12.10.0",
		"ahooks": "^3.9.6",
		"antd": "^6.0.1",
		"clsx": "^2.1.1",
		"emittery": "^1.2.0",
		"fast-xml-parser": "^5.3.2",
		"i18next": "^25.7.1",
		"i18next-resources-to-backend": "^1.2.1",
		"jszip": "^3.10.1",
		"jwt-decode": "^4.0.0",
		"loadsh": "^0.0.4",
		"lodash": "^4.17.21",
		"merge-refs": "^2.0.0",
		"moment": "^2.30.1",
		"motion": "^12.23.25",
		"nanoid": "^5.1.6",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-i18next": "^16.4.0",
		"react-markdown": "^10.1.0",
		"react-router": "^7.10.1",
		"react-syntax-highlighter": "^16.1.0",
		"rehype-highlight": "^7.0.2",
		"rehype-katex": "^7.0.1",
		"remark-gfm": "^4.0.1",
		"remark-math": "^6.0.0",
		"tailwind-merge": "^3.4.0",
		"ts-pattern": "^5.9.0",
		"zustand": "^5.0.9"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@hatchify/icons": "workspace:*",
		"@tailwindcss/vite": "^4.1.17",
		"@types/lodash": "^4.17.21",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"globals": "^16.5.0",
		"lint-staged": "^16.2.7",
		"picocolors": "^1.1.1",
		"sass-embedded": "^1.96.0",
		"simple-git-hooks": "^2.13.1",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"typescript": "~5.9.3",
		"vite": "^7.2.4"
	}
}
